{
  "initial-version": "0.1.0",
  "include-component-in-tag": true,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "plugins": [
    "sentence-case",
    {
      "type": "node-workspace",
      "merge": true,
      "groupName": "js",
      "updatePeerDependencies": false,
      "components": [
        "@tauri-e2e/selenium"
      ]
    }
  ],
  "packages": {
    "tests-e2e-js": {},
    "selenium/javascript": {
      "component": "@tauri-e2e/selenium",
      "release-type": "node",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        "src/metadata/index.ts",
        {
          "type": "json",
          "path": "/tests-e2e-js/package.json",
          "jsonpath": "$['dependencies']['@tauri-e2e/selenium']"
        }
      ]
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "feature",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "perf",
      "section": "Performance Improvements"
    },
    {
      "type": "revert",
      "section": "Reverts"
    },
    {
      "type": "docs",
      "section": "Documentation",
      "hidden": true
    },
    {
      "type": "style",
      "section": "Styles",
      "hidden": true
    },
    {
      "type": "chore",
      "section": "Miscellaneous Chores",
      "hidden": true
    },
    {
      "type": "refactor",
      "section": "Code Refactoring",
      "hidden": true
    },
    {
      "type": "test",
      "section": "Tests",
      "hidden": true
    },
    {
      "type": "build",
      "section": "Build System",
      "hidden": true
    },
    {
      "type": "ci",
      "section": "Continuous Integration",
      "hidden": true
    },
    {
      "type": "deps",
      "section": "Dependencies",
      "hidden": true
    },
    {
      "type": "tools",
      "section": "Tools",
      "hidden": true
    }
  ],
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
